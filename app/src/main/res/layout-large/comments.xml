<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_comment_file"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txt_comment_date"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/txt_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_comment_file"
                android:visibility="gone"
                android:layout_marginStart="20dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_comment_date"
                android:minWidth="170dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_comment_file"
                android:elevation="10dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:id="@+id/relative_comment_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/search_design"
                    >
                    <TextView
                        android:id="@+id/txt_name_comment_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="8dp"/>
                    <TextView
                        android:id="@+id/txt_comment_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_name_comment_file"
                        android:layout_marginHorizontal="9dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
</RelativeLayout>
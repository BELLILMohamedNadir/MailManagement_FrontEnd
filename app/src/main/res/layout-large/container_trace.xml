<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_trace"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageView
                android:id="@+id/img_trace_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_trace_"/>

            <TextView
                android:id="@+id/txt_action_trace_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_trace_container"
                android:maxLines="2"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txt_reference_trace_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_trace_container"
                android:layout_below="@+id/txt_action_trace_container"
                android:maxLines="2"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txt_time_trace_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_trace_container"
                android:layout_below="@+id/txt_reference_trace_container"
                android:maxLines="2"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
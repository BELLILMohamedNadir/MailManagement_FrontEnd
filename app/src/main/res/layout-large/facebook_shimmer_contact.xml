<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_contact_shimmer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_toEndOf="@+id/img_user_contact_shimmer"
                android:layout_marginStart="10dp"
                android:layout_above="@+id/img_user_contact_shimmer"/>
            <TextView
                android:id="@+id/txt_name_contact_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/gray"
                android:layout_toEndOf="@+id/img_user_contact_shimmer"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="120dp"
                android:background="@color/gray"
                android:layout_below="@+id/txt_name_contact_shimmer"
                android:layout_toEndOf="@+id/img_user_contact_shimmer"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
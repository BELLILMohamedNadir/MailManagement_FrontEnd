<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_file_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_shimmer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray"
            android:layout_toStartOf="@+id/img_info_file_shimmer"/>
        <ImageView
            android:id="@+id/img_info_file_shimmer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

        <ImageView
            android:id="@+id/img_previous_file_shimmer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:background="@color/gray"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_next_file_shimmer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@color/gray"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_file_shimmer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/view_shimmer"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="3dp"
            android:layout_toStartOf="@+id/img_next_file_shimmer"
            android:layout_toEndOf="@+id/img_previous_file_shimmer"
            android:background="@color/gray" />
        <TextView
            android:id="@+id/txt_number_page_file_shimmer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/img_file_shimmer"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="5dp"
            android:background="@color/gray"/>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.fragment.CategoryDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_update_category_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_back_update_category_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_back"/>
            <ImageView
                android:id="@+id/img_check_update_category_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_pen"/>
            <ProgressBar
                android:id="@+id/progress_category"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/relative_update_category_details">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_type_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_type_category_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txt_type_details"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_category1_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/structure_"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_category_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/txt_category1_details"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <EditText
                android:id="@+id/edt_designation_category_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/designation"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:background="@drawable/edt_shape"
                android:layout_marginVertical="15dp"
                android:enabled="false"
                android:drawableStart="@drawable/ic_structure"
                android:textCursorDrawable="@drawable/cursor"
                android:drawablePadding="5dp"/>
            <EditText
                android:id="@+id/edt_code_category_details_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/code"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:background="@drawable/edt_shape"
                android:layout_marginVertical="15dp"
                android:enabled="false"
                android:drawableStart="@drawable/ic_structure"
                android:textCursorDrawable="@drawable/cursor"
                android:drawablePadding="5dp"/>
            <EditText
                android:id="@+id/edt_number_category_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/number"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:background="@drawable/edt_shape"
                android:layout_marginVertical="15dp"
                android:drawableStart="@drawable/ic_code"
                android:enabled="false"
                android:textCursorDrawable="@drawable/cursor"
                android:drawablePadding="5dp"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
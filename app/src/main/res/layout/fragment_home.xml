<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ui.fragment.HomeFragment">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <androidx.core.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:id="@+id/linear_search_home"
                       android:layout_width="match_parent"
                       android:layout_height="?actionBarSize">
                       <androidx.cardview.widget.CardView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="18dp"
                           android:layout_marginTop="15dp"
                           app:cardCornerRadius="60dp">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/gray"
                               android:padding="1dp">

                               <ImageView
                                   android:id="@+id/img_menu"
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_centerVertical="true"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentLeft="true"
                                   android:src="@drawable/menu"/>

                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:id="@+id/img_user_home"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginRight="10dp"
                                   android:src="@drawable/ic_user"/>

                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>
                   </LinearLayout>

                   <ImageView
                       android:id="@+id/img_mobilis_home"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/linear_search_home"
                       android:layout_centerInParent="true"
                       android:layout_marginHorizontal="20dp"
                       android:layout_marginTop="40dp"
                       android:src="@drawable/mobilis" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:layout_below="@id/img_mobilis_home"
                       android:layout_marginTop="35dp"
                       android:layout_centerInParent="true">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_all_file"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15dp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img1"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_mail_" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img1"
                                       android:text="@string/all"
                                       android:layout_centerHorizontal="true"
                                       android:textSize="15sp"
                                       android:layout_marginBottom="10dp"
                                       android:textColor="@color/black"/>
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_to_trait_file"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15dp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img4"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_clock" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img4"
                                       android:text="@string/trait_mail"
                                       android:layout_centerHorizontal="true"
                                       android:textSize="15sp"
                                       android:layout_marginBottom="10dp"
                                       android:textColor="@color/black"/>
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_arrived_file"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15dp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img3"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_received_" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img3"
                                       android:text="@string/arrived_mail"
                                       android:layout_centerHorizontal="true"
                                       android:textSize="15sp"
                                       android:layout_marginBottom="10dp"
                                       android:textColor="@color/black"/>
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_sent_file"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15dp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img2"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_send_" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img2"
                                       android:text="@string/sent_mail"
                                       android:layout_centerHorizontal="true"
                                       android:textSize="15sp"
                                       android:layout_marginBottom="10dp"
                                       android:textColor="@color/black"/>
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_trait_file"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15dp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">

                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img5"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_traited" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img5"
                                       android:layout_centerHorizontal="true"
                                       android:layout_marginBottom="10dp"
                                       android:text="@string/traited_mail"
                                       android:textColor="@color/black"
                                       android:textSize="15sp" />
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>
                           <androidx.cardview.widget.CardView
                               android:id="@+id/card_send_with_email"
                               android:layout_width="200dp"
                               android:layout_height="130dp"
                               app:cardCornerRadius="15sp"
                               android:layout_marginVertical="10dp"
                               android:layout_marginHorizontal="15dp"
                               android:layout_weight="1">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/gray">

                                   <ImageView
                                       android:id="@+id/img8"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:src="@drawable/ic_email_" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_below="@id/img8"
                                       android:text="@string/sent_mail_email"
                                       android:layout_centerHorizontal="true"
                                       android:textSize="15sp"
                                       android:layout_marginBottom="10dp"
                                       android:textColor="@color/black"/>
                               </RelativeLayout>
                           </androidx.cardview.widget.CardView>
                       </LinearLayout>

                   </LinearLayout>

               </RelativeLayout>
           </androidx.core.widget.NestedScrollView>

       </RelativeLayout>

</FrameLayout>